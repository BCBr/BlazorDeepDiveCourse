@if (TasksList != null && TasksList.Count > 0)
{
	<ul class="list-unstyled">
		@foreach (TaskToDo toDoTask in TasksList)
		{
			<TaskToDoComponent ToDoTask="@toDoTask" CallUpdateVisual="UpdateList"> </TaskToDoComponent>
		}
	</ul>
}

@code 
{
	[Parameter]
	public List<TaskToDo> TasksList { get; set; }

	[Parameter]
	public EventCallback CallUpdateVisual { get; set; }

	private void UpdateList()
	{
		TasksList = TasksRepository.GetTasks();
	}
}
